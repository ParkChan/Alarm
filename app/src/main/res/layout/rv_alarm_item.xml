<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <variable
            name="alarm"
            type="com.chan.alarm.feature.database.domain.data.Alarm" />

        <variable
            name="alarmViewModel"
            type="com.chan.alarm.common.ui.AlarmViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <View
            android:id="@+id/view_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rect_ringtone"
            app:layout_constraintDimensionRatio="1:0.25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_alarm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:background="@drawable/ic_alarm"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg" />

        <TextView
            android:id="@+id/tv_time"
            setTime="@{alarm}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/iv_alarm_icon"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="08:00 AM" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:text="@{alarm.alarmName}"
            android:textColor="@color/text_remind_hint_color"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toEndOf="@id/iv_alarm_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            tools:text="내시경 약 먹기" />

        <CheckBox
            android:id="@+id/cb_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:button="@drawable/selector_check_box_alarm"
            android:checked="@{alarm.isAlarm}"
            android:onClick="@{() -> alarmViewModel.onClickCheckBox(context, cbAlarm.isChecked(), alarm) }"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
